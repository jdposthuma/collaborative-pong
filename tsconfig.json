{
    "compilerOptions": {
      "target": "ESNext", // Use the latest ECMAScript features
      "module": "ESNext", // Output ES modules
      "moduleResolution": "Node", // Resolve modules using Node.js module resolution
      "strict": true, // Enable strict type-checking
      "esModuleInterop": true, // Enable compatibility with CommonJS modules
      "forceConsistentCasingInFileNames": true, // Ensure consistent file name casing
      "skipLibCheck": true, // Skip type checking of declaration files for faster builds
      "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
      "resolveJsonModule": true, // Allow importing JSON files
      "isolatedModules": true, // Required for transpiling modules independently
      "baseUrl": ".", // Set the base directory for non-relative module imports
      "paths": { // Define custom path mappings (optional)
        "@/*": ["src/*"]
      },
      "outDir": "./dist", // Specify the output directory for compiled files
      "rootDir": "./src", // Specify the root directory for input files
      "types": ["jest", "node"], // Include type definitions for Jest and Node.js
      "lib": ["ESNext", "DOM"] // Include libraries for modern JavaScript and DOM APIs
    },
    "include": ["src/**/*"], // Include all TypeScript files in the src directory
    "exclude": ["node_modules", "dist"], // Exclude node_modules and output directory
    "ts-node": {
      "esm": true // Enable ESM support for ts-node (optional)
    }
  }
  